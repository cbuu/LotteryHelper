/* select.wxss */

.select_container {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  height: 100rpx;
  margin: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.picker_container {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  height: 80rpx;
  margin: 10rpx;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  width: 55%;
  padding-left: 20rpx;
}

.input_container {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  height: 80rpx;
  font-size: 35rpx;
  width: 45%;
  margin: 10rpx;
  text-align: center;
  line-height: 80rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}

.line {
  border: 1rpx solid #e0e0e0;
  margin: 10rpx;
}

.selection_container {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 10rpx;
  flex-wrap: wrap;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  justify-content: space-around;
  display: flex;
}

.selection {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 100rpx;
  margin: 10rpx;
}

.btn_area{
  margin: 20rpx;
}