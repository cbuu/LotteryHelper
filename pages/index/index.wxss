/**index.wxss**/
.numbers_container {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  height: 100rpx;
  margin: 20rpx;
  display: flex;
}

#num6 {
  color: red;
}

.number_view{
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  height: 80rpx;
  margin: 10rpx;
  text-align: center;
  line-height: 80rpx;
  width: 80rpx;
}

.buttons {
  display: flex;
  width:100%;
}

.button {
  margin: 20rpx;
  width: 210rpx;
}

.line {
  border: 1rpx solid #e0e0e0;
  margin: 10rpx;
}


.bet_item {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  height: 100rpx;
  margin: 20rpx;
  text-align: center;
  line-height: 80rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
}

.nums {
  display: flex;
  justify-content: space-around;
}

.bet_des {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  
}

.bet_num {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 80rpx;
  margin: 20rpx;
}

.bet_money {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  
}